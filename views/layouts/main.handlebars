        <!-- 
            CONTACT SECTION
       -->
       {{!-- Floating email button in bottom right of screen --}}
        <button class="btn email-button">
            <i class="far fa-envelope fa-2x"></i>
        </button>
        
        <form action="#" class="email-form hide">
            <button class="exit-button"><span class="exit-button-x">x</span></button>
            <div class="row">
                <!-- Name and Email forms -->
                <section class="col-md-6">
                    <label for="name">Your Name</label>
                    <input type="text" class="form-control" id="name" placeholder="John Smith" name="name" />
                </section>
                <section class="col-md-6">
                    <label for="email">Your Email</label>
                    <input type="text" class="form-control" id="email" placeholder="Example@email.com" name="email" />
                </section>
            </div>
            <div class="row">
                <!-- Message and Submit button -->
                <section class="col-sm-12">
                    <label for="form-message">Message</label>
                    <textarea type="text" class="form-control" rows="7" id="form-message"
                        placeholder="Tell me something about my eyes..." name="email"></textarea>
                    <input type="submit" value="Submit" id="submit-email-button" class=" col-sm-12 text-uppercase font-weight-bold">
                </section>
            </div>
        </form>
        <article class="email-sent-success-modal container hide">
            <button class="exit-button-modal"><span class="exit-button-x">x</span></button>
            <h2 class="email-modal-header">Email Sent!</h2>
            <p class="row email-modal-text">You should receive a confirmation email shortly. It may have been sent to your spam folder.</p>
        </article>
    </footer>
