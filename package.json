{
    "name": "Portfolio",
    "version": "4.0.0",
    "description": "Personal Developer Portfolio",
    "main": "server.js",
    "scripts": {
        "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
        "start:prod": "node server.js",
        "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
        "client": "cd client && npm run start",
        "seed": "node scripts/seedDB.js",
        "install": "cd client && npm install",
        "build": "cd client && npm run build",
        "heroku-postbuild": "npm run build"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/BR3NDAN-L8N/ResponsiveBootstrapPortfolio.git"
    },
    "author": "Brendan Leighton",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/BR3NDAN-L8N/ResponsiveBootstrapPortfolio/issues"
    },
    "homepage": "https://github.com/BR3NDAN-L8N/ResponsiveBootstrapPortfolio#readme",
    "dependencies": {
        "@sendgrid/mail": "^7.2.6",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "express-handlebars": "^5.1.0",
        "express-session": "^1.17.1",
        "handlebars": "^4.7.6",
        "if-env": "^1.0.4",
        "mongoose": "^5.10.9",
        "morgan": "^1.10.0"
    },
    "devDependencies": {
        "concurrently": "^4.1.2"
    }
}
